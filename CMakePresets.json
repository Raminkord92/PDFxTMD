{
    "version": 8,
    "configurePresets": [
        {
            "name": "default",
            "hidden": true,
            "binaryDir": "${sourceDir}/build/${presetName}"
        },
        {
            "name": "windows",
            "hidden": true,
            "inherits": "default",
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Windows"
            },
            "generator": "Visual Studio 17 2022"
        },
        {
            "name": "static",
            "hidden": true,
            "inherits": "default",
            "cacheVariables": {
                "PDFxTMDLib_STATIC": "ON"
            }
        },
        {
            "name": "shared",
            "hidden": true,
            "inherits": "default",
            "cacheVariables": {
                "PDFxTMDLib_STATIC": "OFF"
            }
        },
        {
            "name": "release",
            "description": "Optimized release build",
            "hidden": true,
            "inherits": "default",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release"
            }
        },
        {
            "name": "debug",
            "hidden": true,
            "inherits": "default",
            "description": "Debug build",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            }
        },
        {
            "name": "ninja",
            "hidden": true,
            "generator": "Ninja Multi-Config"
        },
        {
            "name": "production-sharedLib",
            "inherits": ["shared", "ninja", "release"]
        },
        {
            "name": "windows-production-staticLib",
            "inherits": ["static", "windows", "release"]
        },
        {
            "name": "debug-sharedLib",
            "inherits": ["shared", "ninja", "debug"]
        },
        {
            "name": "windows-debug-staticLib",
            "inherits": ["static", "windows", "debug"]
        }
    ],
    "buildPresets": [
        {
            "name": "default-release",
            "configurePreset": "production-sharedLib",
            "configuration": "Release"
        },
        {
            "name": "windows-default-release",
            "configurePreset": "windows-production-staticLib",
            "configuration": "Release"
        }
    ],
    "workflowPresets": [
        {
            "name": "linux-release",
            "steps": [
                {
                    "type":"configure",
                    "name": "production-sharedLib"
                },
                {
                    "type": "build",
                    "name": "default-release"
                }
            ]
        },
        {
            "name": "windows-release",
            "steps": [
                {
                    "type":"configure",
                    "name": "windows-production-staticLib"
                },
                {
                    "type": "build",
                    "name": "windows-default-release"
                }
            ]
        }

    ]
}